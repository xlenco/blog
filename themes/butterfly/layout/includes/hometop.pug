if is_home()
  #home_top
    .home_top_group
      #homeTopGroup.homeTopGroup
        #banner_group
          #banners
            include sticky.pug
          .category_group
            .category_item
              a.category_button(href="https://bio-w.cn/tags/Python/",style="background:linear-gradient(to right,#364f6b,#3fc1c9)")
                span.category_button_text 生物信息
                i.fas.fa-laptop-code
            .category_item
              a.category_button(href="https://bio-w.cn/tags/Python/",style="background:linear-gradient(to right,#6639a6,#3490de)")
                span.category_button_text 植物学试验
                i.fas.fa-lightbulb
            .category_item
              a.category_button(href="https://bio-w.cn/tags/Python/",style="background:linear-gradient(to right,#f65,#ffbf37)")
                span.category_button_text 深度学习
                i.fas.fa-book
        .top_post_group
          if site.data.slider
            each i in site.data.slider
              .top_post_item
                .post_cover
                  a(href=url_for(i.link) title=i.title)
                    img.post_bg.entered.loaded(src=url_for(i.cover))
                    .post_cover_info
                      p.post_cover_text= i.description

                .post_info(onclick=`"window.open(`+url_for(i.link)+`,"_self")"`)
                  a.article-title(href=url_for(i.link) title=i.title)= i.title
